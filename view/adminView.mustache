<link href="/public/css/admin.css" rel="stylesheet">
<section class="main-container">
  <div class="header-card">
    <h1 class="title">{{title}}</h1>
    <div class="user-profile">
      <img src="{{foto_perfil}}" alt="Foto de perfil" class="profile-avatar">
      <p class="profile-info">
        <i class="fas fa-user"></i>{{usuario}}
      </p>
    </div>
  </div>

  <div class="graficos-container">
    <h2 class="section-title">
      <i class="fas fa-chart-bar"></i> Gráficos
    </h2>
    <div class="graficos-grid">
      {{#graficos}}
        <div class="grafico-card">
          <img src="data:image/png;base64,{{src}}" alt="{{@key}}">
        </div>
      {{/graficos}}
    </div>
  </div>

  <div class="estadisticas-container">
    <h2 class="section-title">
      <i class="fas fa-chart-line"></i> Estadísticas Generales
    </h2>
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-value">{{data.jugadores}}</div>
        <div class="stat-label">Jugadores Totales</div>
      </div>

      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-gamepad"></i>
        </div>
        <div class="stat-value">{{data.partidas}}</div>
        <div class="stat-label">Partidas Jugadas</div>
      </div>

      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-question-circle"></i>
        </div>
        <div class="stat-value">{{data.preguntas}}</div>
        <div class="stat-label">Preguntas Totales</div>
      </div>
    </div>
  </div>
</section>