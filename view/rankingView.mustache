<section class="container-ranking">
    <h2 class="text-center text-violet">{{titulo_ranking}}</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Posición</th>
                <th>Foto</th>
                <th>Jugador</th>
                <th>Mejor Puntaje</th>
            </tr>
        </thead>
        <tbody>
            {{#jugadores}}
            <tr>
                <td>{{posicion}}</td>
                <td><img src="/{{url_foto_perfil}}" alt="Foto de {{nombre_usuario}}" class="img-ranking"></td>
                <td>
                    <a href="/usuario/showProfileById?id={{id_usuario}}">{{nombre_usuario}}</a>
                </td>
                <td>{{puntaje_maximo}}</td>
            </tr>
            {{/jugadores}}
            {{^jugadores}}
            <tr>
                <td colspan="4" class="text-center">El ranking está vacío. ¡Juega para aparecer aquí!</td>
            </tr>
            {{/jugadores}}
        </tbody>
    </table>
</section>

<section class="container-historial mt-5">
    <h3 class="text-center text-pink">Mi Historial de Partidas</h3>
    <ul class="list-group">
        {{#partidas}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Partida {{numero}}
            <span class="badge bg-primary rounded-pill">{{puntaje}} puntos</span>
        </li>
        {{/partidas}}
        {{^partidas}}
        <li class="list-group-item">Aún no has jugado ninguna partida.</li>
        {{/partidas}}
    </ul>
</section>

<style>
    .img-ranking {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }
    .container-ranking, .container-historial {
        max-width: 800px;
        margin: auto;
    }
</style>