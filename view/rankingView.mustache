<section class="container-ranking">
    <h2 class="text-center text-violet">{{titulo_ranking}}</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Posición</th>

                <th>Jugador</th>
                <th>Mejor Puntaje</th>
            </tr>
        </thead>
        <tbody>
            {{#jugadores}}
            <tr>
                <td>{{posicion}}</td>
                <td><a href="/profile/showProfileById?id={{id_usuario}}">{{nombre_usuario}}</a></td>
                <td class="text-center">{{puntaje_maximo}}</td>
            </tr>
            {{/jugadores}}
            {{^jugadores}}
            <tr>
                <td colspan="4" class="text-center">El ranking está vacío. ¡Juega para aparecer aquí!</td>
            </tr>
            {{/jugadores}}
        </tbody>
    </table>
</section>

<section class="container-historial mt-5">
    <h3 class="text-center text-pink">Mi Historial de Partidas</h3>
    <ul class="list-group">
        {{#partidas_jugadas}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Partida {{numero}}
            <strong>{{puntaje}} puntos</strong>
        </li>
        {{/partidas_jugadas}}

        {{^partidas}}
        <li class="list-group-item">Aún no has jugado ninguna partida.</li>
        {{/partidas}}
    </ul>
</section>

<style>
    .container-ranking, .container-historial {
        max-width: 800px;
        margin: auto;
    }
</style>